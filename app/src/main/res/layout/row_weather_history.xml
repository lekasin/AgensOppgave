<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="6dp"
    android:layout_margin="4dp">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_list_row"
        android:paddingLeft="@dimen/standard_margin"
        android:paddingRight="@dimen/standard_margin">

        <TextView
            android:id="@+id/historyListDateTv"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/hitoryListTempTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@id/historyListDateTv"
            android:layout_marginLeft="@dimen/spacey_margin"
            android:layout_marginRight="@dimen/spacey_margin"
            android:layout_toRightOf="@id/historyListDateTv"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/historyListDescTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@id/hitoryListTempTv"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/hitoryListTempTv"
            android:gravity="center_vertical|right" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
